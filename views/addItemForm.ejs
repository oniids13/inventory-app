<%- include('./partials/header') %>


<main>
    <div class="container">
        <form action="/add" method="POST">
            <div class="form-floating mb-3">
                <input name="item_name" type="text" class="form-control" id="floatingInput" required>
                <label for="floatingInput">Item Name</label>
              </div>
            <div class="form-floating mb-3">
                <input name="description" type="text" class="form-control" id="floatingInput" required>
                <label for="floatingInput">Description</label>
            </div>
            <div class="form-floating mb-3">
                <input name="price" type="number" class="form-control" id="floatingInput" required>
                <label for="floatingInput">Price</label>
            </div>
            <div class="form-floating mb-3">
                <input name="qty" type="number" class="form-control" id="floatingInput" required>
                <label for="floatingInput">Quantity</label>
            </div>
            <label for="form-select">Category</label>
            <select class="form-select" name="category">
                <% categoryName.map(category => { %>
                    <option value="<%= category.id  %>"><%= category.title %></option>
               <% }) %>
              </select>
              <button type="submit" class="btn btn-warning mt-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                  </svg>
              </button>
        </form>
        <div>
            <a href="/">
              <button class="btn btn-success mt-3">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                      <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                    </svg>
              </button>
            </a>
        </div>
    </div>
</main>



<%- include('./partials/footer') %>