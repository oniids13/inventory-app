<%- include('./partials/header') %>

<main>
    <div class="container">
        <form action="/addCategory" method="POST">
            <div class="form-floating mb-3">
                <input name="categoryName" type="text" class="form-control" id="floatingInput" required>
                <label for="floatingInput">Category Name</label>
            </div>
            <button type="submit" class="btn btn-warning mt-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                  </svg>
              </button>
        </form>

        <div class="mt-5">
            <h4>Current Categories</h4>
            <ul>
            <% categoryName.map(category => { %>
                <li class="mt-2"><%= category.title %>
                    <button class="btn btn-danger btn-sm" onclick="confirmDelete(<%= category.id %>)">
                        <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                          </svg>
                    </button>
                </li>
            <%}) %>
            </ul>
        </div>

        <div>
            <a href="/">
              <button class="btn btn-success mt-3">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                      <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                    </svg>
              </button>
            </a>
        </div>
    </div>
</main>

<script>
    function confirmDelete(categoryId) {
        const password = prompt("Enter the admin password to delete this category.")

        if (password === 'iamadmin') {
            window.location.href = `/deleteCategory/${categoryId}`
        } else if (password !== null) {
            alert('Incorrect Password. Deletion canceled')
        }
    }
</script>

<%- include('./partials/footer') %>