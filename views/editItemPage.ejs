<%- include('./partials/header') %>

<main>
    <div class="container">
        <form action="/edit" method="POST">
            <div class="form-floating mb-3">
                <input name="item_name" type="text" class="form-control" id="floatingInput" value="<%= item[0].item_name %>">
                <label for="floatingInput">Item Name</label>
              </div>
            <div class="form-floating mb-3">
                <input name="description" type="text" class="form-control" id="floatingInput" value="<%= item[0].description %>">
                <label for="floatingInput">Description</label>
            </div>
            <div class="form-floating mb-3">
                <input name="price" type="number" class="form-control" id="floatingInput" value="<%= item[0].price %>">
                <label for="floatingInput">Price</label>
            </div>
            <div class="form-floating mb-3">
                <input name="qty" type="number" class="form-control" id="floatingInput" value="<%= item[0].qty %>">
                <label for="floatingInput">Quantity</label>
            </div>
            <label for="form-select">Category</label>
            <select class="form-select" name="category">
                <% categoryName.map(category => { %>
                    <option value="<%= category.id  %>" <%= category.id === item[0].category_id ? 'selected' : '' %>><%= category.title %></option>
               <% }) %>
              </select>
              <input type="number" name="item_id" value="<%= item[0].id %>" hidden>
              <button type="submit" class="btn btn-warning mt-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                  </svg>
              </button>
        </form>
        <div>
            <a href="/">
              <button class="btn btn-success mt-3">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                      <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                    </svg>
              </button>
            </a>
        </div>
    </div>
</main>





<%- include('./partials/footer') %>